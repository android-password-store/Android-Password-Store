<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.passwordstore.android.activity.ServerConfigActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/server_config_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/server_config_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/server_config_activity_title" />
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.textview.MaterialTextView
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:id="@+id/server_protocol_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/server_title"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/server_config_appbar"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/server_protocol_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:singleSelection="true"
        app:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/server_protocol_title"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:id="@+id/server_protocol_ssh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/server_protocol_ssh"
            android:checked="true"
            app:chipBackgroundColor="?attr/colorSecondary" />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:id="@+id/server_protocol_https"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/server_protocol_https"
            android:checked="false"
            app:chipBackgroundColor="?attr/colorSecondary" />

    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
